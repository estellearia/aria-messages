  flex: 1;
  position: relative;
  min-height: 54px;
}

.dialogue-name {
  color: #ffeb3b;
  display: block;
  margin-bottom: 8px;
}

.dialogue-arrow {
  position: absolute;
  bottom: 8px;
  left: 0;
  width: 22px;
  height: 22px;
  image-rendering: pixelated;
  opacity: 0.7;
  animation: bounceArrow 1s infinite;
  z-index: 10;
}

